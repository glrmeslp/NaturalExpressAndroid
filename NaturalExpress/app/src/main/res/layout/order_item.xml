<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="Produtos OrgÃ¢nicos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_order"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/app_icon" />

    <TextView
        android:id="@+id/description_order_num_items"
        android:layout_width="41dp"
        android:layout_height="19dp"
        android:layout_marginTop="7dp"
        android:text="5 itens"
        android:textSize="11dp"
        app:layout_constraintTop_toBottomOf="@+id/title_order"
        tools:layout_editor_absoluteX="128dp" />

    <TextView
        android:id="@+id/description_order_value"
        android:layout_width="159dp"
        android:layout_height="19dp"
        android:layout_marginTop="7dp"
        android:text="valor do pedido: R$54,90"
        android:textSize="11dp"
        app:layout_constraintTop_toBottomOf="@+id/title_order"
        tools:layout_editor_absoluteX="177dp" />

    <TextView
        android:id="@+id/description_order_payment"
        android:layout_width="208dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="pagamento na entrega - dinheiro"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/img_order"
        app:layout_constraintTop_toTopOf="@+id/description_order_num_items" />

    <TextView
        android:id="@+id/description_order_delivery"
        android:layout_width="111dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:text="Entrega prevista entre: "
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/img_order"
        app:layout_constraintTop_toTopOf="@+id/description_order_payment" />

    <TextView
        android:id="@+id/description_delivery_prevision_1"
        android:layout_width="43dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/description_order_delivery"
        app:layout_constraintTop_toBottomOf="@+id/description_order_payment" />

    <TextView
        android:id="@+id/description_delivery_prevision_2"
        android:layout_width="43dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/description_delivery_prevision_1"
        app:layout_constraintTop_toBottomOf="@+id/description_order_payment" />

    <Button
        android:id="@+id/button_see_order"
        android:layout_width="181dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="acompanhar pedido"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/img_order"
        app:layout_constraintTop_toBottomOf="@+id/description_order_delivery" />

</androidx.constraintlayout.widget.ConstraintLayout>