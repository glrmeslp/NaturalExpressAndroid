<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="Produtos OrgÃ¢nicos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_order"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_order"
        app:srcCompat="@drawable/app_icon" />

    <TextView
        android:id="@+id/description_order_num_items"
        android:layout_width="41dp"
        android:layout_height="19dp"
        android:layout_marginTop="7dp"
        android:text="5 itens"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@+id/description_order_payment"
        app:layout_constraintTop_toBottomOf="@+id/title_order" />

    <TextView
        android:id="@+id/description_order_value"
        android:layout_width="159dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="valor do pedido: R$54,90"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/description_order_num_items"
        app:layout_constraintTop_toBottomOf="@+id/title_order" />

    <TextView
        android:id="@+id/description_order_payment"
        android:layout_width="208dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="pagamento na entrega - dinheiro"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/img_order"
        app:layout_constraintTop_toTopOf="@+id/description_order_num_items" />

    <TextView
        android:id="@+id/description_order_delivery"
        android:layout_width="111dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:text="Entrega prevista: "
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/img_order"
        app:layout_constraintTop_toTopOf="@+id/description_order_payment" />

    <TextView
        android:id="@+id/description_delivery_prevision_1"
        android:layout_width="43dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="1 dia"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/description_order_delivery"
        app:layout_constraintTop_toBottomOf="@+id/description_order_payment" />

</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>